{
  "name": "@peak-ai/jedlik",
  "version": "1.0.1",
  "description": "DynamoDB ODM",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/peak-ai/jedlik",
  "author": "Peak",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "tslint -p tsconfig.json",
    "preversion": "yarn lint && yarn test",
    "postversion": "yarn build && git push --tags && yarn publish . --tag $npm_package_version && git push && echo \"Successfully released version $npm_package_version!\"",
    "pretest": "docker-compose up -d",
    "test": "jest",
    "posttest": "docker stop $(docker ps -aqf \"name=jedlik\")"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "@types/node": "^13.11.0",
    "aws-sdk": "^2.315.0"
  },
  "peerDependencies": {
    "aws-sdk": "^2.315.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "jest": "^24.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb-base": "^0.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
